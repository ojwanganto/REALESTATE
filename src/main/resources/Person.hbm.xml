<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.restate.project.model.Person" table="person">
        <meta attribute="class-description">
            This class contains the Person detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="full_names" type="string"/>
        <property name="gender" column="gender" type="string"/>
        <property name="nationalIdNo" column="nationalIdNo" type="string"/>
        <property name="phoneNumber" column="phoneNumber" type="string"/>
        <property name="dob" column="dob" type="date"/>
        <many-to-one name="nationality" cascade="persist" class="org.restate.project.model.Country" not-null="true" column="nationality"/>

        <property name="address" column="address" type="string"/>

    </class>
</hibernate-mapping>