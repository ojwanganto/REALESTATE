<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.restate.project.model.Agent" table="agent">
        <meta attribute="class-description">
            A table that contains Agent attributes.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="contactPerson" column="contact_person" type="string"/>
        <property name="name" column="name" type="string"/>
        <property name="bankAccount" column="bank_account" type="string"/>
        <property name="address" column="address" type="string"/>
        <property name="phoneContact" column="phone_contact" type="string"/>

    </class>
</hibernate-mapping>

